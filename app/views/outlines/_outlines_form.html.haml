.form-button-div
  %button#stealth-button{:title => "button"} Stealth
  = link_to 'Back', outlines_path, class: "form-back-button"

.form-container
  = form_for @outline do |f|
    %p.form-label
      = f.label :title, id: "title-label"
    %p.form-input
      = f.text_field :title, id: "title-input"
    %p.form-label
      = f.label :log
    %p.form-input
      = f.text_area :log, id: "log"
    %br
      = f.submit "Save", id: 'save-button'


:javascript
  $(document).ready(function(){
  var userColor = "#{current_user.color}";
  $('#title-input').addClass(userColor);
  $('#log').addClass(userColor);
  });
